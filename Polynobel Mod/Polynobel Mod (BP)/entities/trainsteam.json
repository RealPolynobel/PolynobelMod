{
    "format_version": "1.16.0",
    "minecraft:entity": {
    "description": {
        "identifier": "polynobel:trainsteam",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false,
        "runtime_identifier": "minecraft:minecart",
        "animations": {
          "str": "controller.animation.str"
        },
        "scripts": {
          "animate": [
            "str"
          ]
        }
       },
    "component_groups": {
      "despawn":{
        "minecraft:instant_despawn":{},
        "minecraft:spawn_entity": {
          "entities": {
            "min_wait_time": 0,
            "max_wait_time": 0,
            "spawn_sound": "",
            "single_use": true,
            "spawn_item": "polynobel:trainsteam_spawn_egg"
          }
        }
      },
      "summon_carriage":{
        "minecraft:spawn_entity": {
          "entities": {
            "min_wait_time": 0,
            "max_wait_time": 0,
            "spawn_sound": "random.anvil_use",
            "single_use": true,
            "spawn_entity": "polynobel:carriage",
            "should_leash": true,
            "spawn_event": "leashed_summon"
          }
        }
      },
      "summon_cargo":{
        "minecraft:spawn_entity": {
          "entities": {
            "min_wait_time": 0,
            "max_wait_time": 0,
            "spawn_sound": "random.anvil_use",
            "single_use": true,
            "spawn_entity": "polynobel:cargo",
            "should_leash": true,
            "spawn_event": "leashed_summon"
          }
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [ "engine" ]
      },
      "minecraft:scale": {
        "value": 1.0
      },
      "minecraft:collision_box": {
        "width": 2.8,
        "height": 1.2
      },
      "minecraft:variant":{
        "value": 1
      },
      "minecraft:rail_movement": {
      },
      "minecraft:rail_sensor": {
        "eject_on_activate": true
      },
      "minecraft:leashable": {
        "soft_distance": 0.0,
        "hard_distance": 3.0,
        "max_distance": 50.0,
        "can_be_stolen": false
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:interact": {
				"interactions": [
          {
						"on_interact": {
							"filters": {
								"all_of": [
                  { "test": "is_sneaking", "subject": "player", "operator": "equals", "value": true },
                  { "test": "rider_count", "subject": "self", "operator": "equals", "value": 0 },
								  { "test": "has_equipment", "subject": "player", "domain": "hand", "value": "edge:carriage_coupler"}
								]
							},
							"event": "summon_carriage",
							"target": "self"
						},
						"use_item": true,
            "swing": true,
						"interact_text": "action.interact.couple"
					},
          {
						"on_interact": {
							"filters": {
								"all_of": [
                  { "test": "is_sneaking", "subject": "player", "operator": "equals", "value": true },
                  { "test": "rider_count", "subject": "self", "operator": "equals", "value": 0 },
								  { "test": "has_equipment", "subject": "player", "domain": "hand", "value": "edge:cargo_coupler"}
								]
							},
							"event": "summon_cargo",
							"target": "self"
						},
						"use_item": true,
            "swing": true,
						"interact_text": "action.interact.couple"
					}
				]
			},
      "minecraft:nameable": {
      },
      "minecraft:rideable": {
		    "seat_count": 1,
        "crouching_skip_interact": true,
		    "interact_text": "action.interact.ride",
        "family_types": [
          "player"
        ],
        "seats": [
          { 
            "position": [1.2, 0.1, 0],
            "rotate_rider_by": -90
          }
        ]
      },
      "minecraft:pushable": {
          "is_pushable": true,
          "is_pushable_by_piston": false
      },
      "minecraft:is_stackable":{},
      "minecraft:push_through":{
        "value": 1
      },
      "minecraft:physics": {},
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 60.0,
          "max_dropped_ticks": 20,
          "use_motion_prediction_hints": true
        },
        "conditional_values": [
          {
            "max_optimized_distance": 0.0,
            "max_dropped_ticks": 0,
            "conditional_values": [
              { "test": "is_moving", "subject": "self", "operator": "==", "value": true}
            ]
          }
        ]
      }
    },

    "events": {
      "despawn":{
        "add":{
          "component_groups":[
            "despawn"
          ]
        }
      },
      "summon_carriage":{
        "add":{
          "component_groups":[
            "summon_carriage"
          ]
        }
      },
      "summon_cargo":{
        "add":{
          "component_groups":[
            "summon_cargo"
          ]
        }
      }
    }
  }
}
